---
import { Hexagon } from "./Hexagon";
---

<section class="py-60 relative overflow-x-clip">
  <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
    <Hexagon 
      className="size-[800px]" 
      size={800} 
      duration={30} 
      client:load 
    />
  </div>

  <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
    <Hexagon
      className="size-[1200px]"
      size={1200}
      duration={50}
      reverse
      client:load
    />
  </div>

  <div class="container">
    <slot />
  </div>
</section>